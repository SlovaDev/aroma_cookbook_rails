<% provide(:title, t('devise.sessions.title')) %>

<div class="container">
  <div class="authentication">
    <div class="card">
      <div class="card-block">
        <div class="row">
          <div class="col-md" style="padding:2em">
            <h3><%= t('devise.sessions.title') %></h3>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %>
                <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, t('forms.buttons.log_in'), class: 'btn btn-xl btn-outline' %>
              </div>
              <br>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>