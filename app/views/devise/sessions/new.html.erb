<div class="wrapper wrapper-full-page">
  <div class="full-page login-page"> 
      <div class="content">
          <div class="container">
              <div class="row">                   
                  <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
                      <form method="#" action="#">
                          
                      <!--   if you want to have the card without animation please remove the ".card-hidden" class   -->
                          <div class="card card-hidden">
                              <div class="header text-center">Login</div>
                              <div class="content">
                                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %>
              <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, t('forms.buttons.log_in'), class: 'btn btn-xl btn-outline' %>
            </div>
            <br>
          <% end %>
                              </div>
                              
                          </div>
                              
                      </form>
                              
                  </div>                    
              </div>
          </div>
      </div>
    
