<%= simple_form_for [cuisine, recipe], html: { multipart: true } do |f| %>
  <div class="field"
    <%= f.input :name, placeholder: 'Recipe name' %>
  </div>
  <div class="col-md-6">
      <h3>Ingredients</h3>
        <%= f.simple_fields_for :ingredients do |ingredient| %>
          <%= render 'ingredient_fields', f: ingredient %>
        <% end %>
      <div class="links">
        <%= link_to_add_association 'Add Ingredient', f, :ingredients, class: "form-button btn btn-default" %>
      </div>
  </div>
  <div class="col-md-6">
      <h3>Directions</h3>
      <%= f.simple_fields_for :directions do |direction| %>
        <%= render 'direction_fields', f: direction %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Add Direction', f, :directions, class: "form-button btn btn-default" %>
      </div>
  </div>
  <%= f.button :submit, "Save recipe", class: "form-button btn btn-default" %>
<% end %>
