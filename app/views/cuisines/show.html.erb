<% provide(:title, @cuisine.name.pluralize) %>
<h1><%= @cuisine.name.pluralize %></h1>

<div class="row">
  <div class="col-md-8">
    <% @cuisine.recipes.each do |recipe| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to recipe.name, recipe_path(recipe) %>
            </h4>
          </div>
        </div>
      <% end %>
  </div>
</div>

<%= link_to "New Recipe", new_recipe_path, class: 'btn btn-success' %>
<%= link_to 'Back', cuisines_path, class: 'btn btn-alert' %>
